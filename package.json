{
	"name": "pogo",
	"displayName": "POGO",
	"repository": {
		"url": "https://github.com/evgenyk/pogo_vscode"
	},
	"author": {
		"email": "evgeny@komarevtsev.net",
		"name": "Evgeny Komarevtsev"
	},
	"license": "MIT",
	"description": "POGO Stack language support",
	"version": "1.3.13",
	"publisher": "evgenyko",
	"engines": {
		"vscode": "^1.41.x",
		"node": "^8.9.3"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "pogo",
				"aliases": [
					"pogo"
				],
				"extensions": [
					"pogo"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "pogo",
				"path": "./snippets/pogo.json"
			}
		],
		"grammars": [
			{
				"language": "pogo",
				"scopeName": "source.pogo",
				"path": "./syntaxes/pogo.tmLanguage.json"
			}
		],
		"breakpoints": [
			{
				"language": "pogo"
			}
		],
		"debuggers": [
			{
				"type": "pogodebug",
				"label": "Pogo Debugger",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [],
						"properties": {
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "pogodebug",
						"request": "attach",
						"name": "Pogo Debugger",
						"pogodebugger": {
							"port": 4250
						}
					}
				],
				"configurationSnippets": [
					{
						"label": "Pogo Debug: attach",
						"description": "A new configuration for debugging a pogo file.",
						"body": {
							"type": "pogodebug",
							"request": "attach",
							"name": "Pogo Debugger",
							"pogodebugger": {
								"port": 4250
							}
						}
					}
				],
				"variables": {}
			}
		]
	},
	"scripts": {
		"prepare": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "^1.0.1",
		"npm": "^6.14.5",
		"request": "^2.88.2",
		"to": "^0.2.9",
		"update": "^0.7.4",
		"vscode-debugadapter": "^1.37.1"
	},
	"devDependencies": {
		"@types/node": "^13.5.1",
		"@types/mocha": "^5.2.7",
		"@types/request": "^2.48.4",
		"typescript": "^3.9.3",
		"mocha": "^7.1.2",
		"@types/vscode": "^1.41.0",
		"vscode-test": "^1.3.0",
		"vscode-debugadapter-testsupport": "^1.40.0",
		"tslint": "^6.1.2",
		"vsce": "^1.75.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	]
}
